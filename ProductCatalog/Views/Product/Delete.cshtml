@model Product

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">ProductId</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>
        <dt class="col-sm-2">ProductName</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>
        <dt class="col-sm-2">CategoryName</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
