@model IEnumerable<Category>

<h2>Category List</h2>
<p><a href="/Category/Create">Create New Category</a></p>

<table class="table">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="/Category/Edit/@category.CategoryId">Edit</a> |
                    <a href="/Category/Delete/@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
